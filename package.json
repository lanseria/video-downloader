{
  "name": "video-downloader",
  "version": "0.5.4",
  "description": "中文视频代理下载器",
  "main": "dist/main/index.js",
  "packageManager": "pnpm@7.12.2",
  "author": {
    "name": "lanseria",
    "email": "bmc@ivhik.cn"
  },
  "scripts": {
    "release": "standard-version",
    "commit": "cz",
    "dev": "vite",
    "build": "vite build",
    "build:github": "vite build --mode staging",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@vicons/ionicons5": "^0.12.0",
    "@vueuse/components": "^8.9.4",
    "@vueuse/core": "^8.9.4",
    "@vueuse/rxjs": "^8.9.4",
    "axios": "^0.26.1",
    "bytenode": "^1.3.6",
    "dayjs": "^1.11.5",
    "dexie": "^3.2.2",
    "execa": "^6.1.0",
    "indexeddb-export-import": "^2.1.5",
    "lodash-es": "^4.17.21",
    "naive-ui": "^2.33.3",
    "nanoid": "^3.3.4",
    "pinia": "^2.0.22",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.7",
    "store": "^2.0.12",
    "vue": "^3.2.40",
    "vue-router": "^4.1.5",
    "youtube-dl-exec": "github:lanseria/yt-dlp-exec"
  },
  "devDependencies": {
    "@anatine/esbuild-decorators": "^0.2.19",
    "@vitejs/plugin-vue": "^2.3.4",
    "@vue/compiler-sfc": "^3.2.40",
    "chalk": "^4.1.2",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^18.3.15",
    "electron-builder": "^23.3.3",
    "esbuild": "^0.14.54",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "vite": "^2.9.15",
    "vue-tsc": "^0.33.9"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "build": {
    "afterPack": "./build/appimage-fix.js",
    "appId": "cn.ivhik.video-downloader",
    "productName": "Video Downloader",
    "copyright": "Copyright © 2021-2022 ivhik Lanseria",
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns",
      "category": "public.app-category.utilities",
      "identity": null,
      "arch": [
        "arm64",
        "universal",
        "x64"
      ]
    },
    "linux": {
      "desktop": {
        "StartupNotify": "false",
        "Encoding": "UTF-8",
        "MimeType": "x-scheme-handler/deeplink"
      },
      "target": [
        "AppImage",
        "rpm",
        "deb"
      ]
    }
  }
}
